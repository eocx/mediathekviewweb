{
  "extends": "@tstdl/server",
  "compilerOptions": {
    "baseUrl": "source",
    "rootDir": "source",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": false,
    "paths": {
      "$shared/*": ["shared/*"],
      "$endpoints/*": ["endpoints/*"],
      "$repositories/*": ["repositories/*"],
      "$search-indexes/*": ["search-indexes/*"],
      "$api/*": ["api/*"],
      "$exposer/*": ["exposer/*"],
      "$root/*": ["*"]
    }
  }
}
